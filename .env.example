# Discord
DISCORD_TOKEN=Bearer <dein_discord_token>
CHANNEL_ID=<discord_channel_id>

# Altrady Webhook
ALTRADY_WEBHOOK_URL=https://api.altrady.com/api/webhook/...
ALTRADY_API_KEY=<altrady_key>
ALTRADY_API_SECRET=<altrady_secret>
ALTRADY_EXCHANGE=BYBI
QUOTE=USDT

# Hebel
FIXED_LEVERAGE=25

# TP-Split + Runner
TP1_PCT=30
TP2_PCT=30
TP3_PCT=30
RUNNER_PCT=10

# Trailing Stop (für Runner; positionsweiter SL)
TRAILING_PERCENTAGE=3.0
TRAILING_DISTANCE=0.5

# Optionaler harter SL (jenseits DCA3)
USE_HARD_SL=off
SL_BUFFER_PCT=5.0

# DCA Größen (in % der Starteinlage)
DCA1_QTY_PCT=150
DCA2_QTY_PCT=225
DCA3_QTY_PCT=340

# Polling/State
POLL_BASE_SECONDS=60
POLL_OFFSET_SECONDS=3
STATE_FILE=state.json
